    "db:migrate-lead": "tsx scripts/run-lead-migration.ts",
    "db:onboarding-tables": "prisma db execute --file ./scripts/apply-onboarding-tables.sql --schema prisma/schema.prisma",
    "db:application-job-optional": "prisma db execute --file ./scripts/apply-application-job-optional.sql --schema prisma/schema.prisma",
    "storage:init": "tsx scripts/init-storage.ts",
