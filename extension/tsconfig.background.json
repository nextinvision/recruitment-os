{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/background",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["chrome", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/background/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist"]
}

