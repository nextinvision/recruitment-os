{
  "manifest_version": 3,
  "name": "Recruitment OS Job Scraper",
  "version": "1.0.0",
  "description": "Manual job scraping extension for LinkedIn, Indeed, and Naukri",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://www.naukri.com/*"
      ],
      "js": ["dist/content/content/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content/content-script.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://www.naukri.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

